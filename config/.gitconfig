[user]
    name = Jesse Stanger
    email = jesse.stanger@gmail.com

[core]
    autocrlf = input

[color]
    ui = auto

[color "branch"]
    current = yellow bold
    local = green bold
    remote = cyan bold

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
    whitespace = red reverse

[color "status"]
    added = green bold
    changed = yellow bold
    untracked = red bold

[help]
    # Automatically correct and execute mistyped commands
    autocorrect = 1

[commit]
    gpgsign = true

[gpg]
    program = /opt/homebrew/bin/gpg

[url "git@github.com:"]
    insteadOf = https://github.com/

[alias]
    unstage = reset HEAD --
